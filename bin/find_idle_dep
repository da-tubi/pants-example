#!/bin/bash

FOLDER=$1

if [ -d "${FOLDER}" ];then
  ./pants dependencies --transitive $FOLDER:sources | grep "requirements#" > /tmp/targets.1
  ./pants --filter-target-type=python_requirement list $FOLDER >  /tmp/targets.2
  diff -u /tmp/targets.1 /tmp/targets.2
else
  echo "Please provide a folder"
fi

